<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center_horizontal"
        android:background="@drawable/kkghjre"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/app_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/money_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="33sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="200000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#47ffffff"
                    android:textSize="@dimen/sp_14"
                    android:text="可借"
                    app:layout_constraintStart_toStartOf="@id/money_number_tv"
                    app:layout_constraintEnd_toEndOf="@id/money_number_tv"
                    app:layout_constraintTop_toBottomOf="@id/money_number_tv"/>

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textColor="#C99F7A"
                    android:textStyle="bold"
                    android:text="3-36个月"
                    app:layout_constraintTop_toTopOf="@id/money_number_tv"
                    app:layout_constraintBottom_toBottomOf="@id/money_number_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#47ffffff"
                    android:textSize="@dimen/sp_14"
                    android:text="周期"
                    app:layout_constraintStart_toStartOf="@id/date_tv"
                    app:layout_constraintEnd_toEndOf="@id/date_tv"
                    app:layout_constraintTop_toTopOf="@id/money_tv"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"
            android:textColor="@color/normal_color"
            android:background="@drawable/btn_bg"
            android:text="立即申请"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>